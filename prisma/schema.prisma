generator client {
  provider      = "prisma-client-js"
}

datasource db {
  provider          = "mysql"
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

model Stream {
  uid                      String   @id
  title                    String
  userId                   String
  status                   String?  @default("offline")
  preferLowLatency         Boolean  @default(true)
  deleteRecordingAfterDays Int?     @default(30)
  recordingMode            String? // automatic, manual, etc.
  webRTCUrl                String? // URL de publicación WebRTC
  webRTCPlaybackUrl        String? // URL de reproducción WebRTC
  createdAt                DateTime @default(now())
  updatedAt                DateTime @updatedAt

  // Información del streamer
  displayName   String? // displayName del streamer
  metroUsername String? // metroUsername del streamer
}
